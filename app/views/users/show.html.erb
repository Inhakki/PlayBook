<h1><%= @user.first_name %>'s Playbooks</h1>

<% if @user_albums.empty? %>
  <p>There doesn't seem to be anything here...</p>
<% else %>
  <ul>
    <% @user_albums.each do |album| %>
      <li><%= link_to album.title, album_path(album) %></li>
    <% end %>
  </ul>
<% end %>

<%= link_to "Create new album", new_user_album_path(@user) %>
